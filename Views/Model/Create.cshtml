@model WheelDeal.Models.ViewModels.ModelViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<!-- Heading Section -->
<h2 class="text-info mt-5">Add Model of Vehicle</h2>

<!-- Form Section -->
<form method="post" action="Create">
    <div class="form-group row mt-3">
        <!-- Label for Makes -->
        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>

        <!-- Dropdown for Makes -->
        <div class="col-4">
            <select asp-for="Model.MakeFK" asp-items="Model.CSelectListItem(Model.Makes)" class="form-control"></select>
        </div>
    </div>

    <div class="form-group row mt-3">
        <!-- Label for Name -->
        <div class="col-2">
            <label asp-for="Model.Name"></label>
        </div>

        <!-- Input Field for Name -->
        <div class="col-4">
            <input asp-for="Model.Name" class="form-control" />
        </div>
    </div>

    <!-- Buttons Row -->
    <div class="form-group row mt-3">
        <!-- Empty space to align with Name label -->
        <div class="col-2"></div>

        <!-- Buttons -->
        <div class="col-4">
            <input type="submit" class="btn btn-primary me-2" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back</a>
        </div>
    </div>
</form>
