@model IEnumerable<WheelDeal.Models.Model>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="row mb-4">
	<div class="col-6">
		<h2 class="text-info">Models of Vehicle</h2>
	</div>
	<div class="col-6 d-flex justify-content-end mt-3 mb-2">
		<a class="btn btn-info" asp-action="Create"><i class="fa-solid fa-motorcycle"></i> &nbsp; Add New Model</a>
	</div>
	<br />
	<div>
		<table class="table table-striped border">
			<tr class="table-info">
				<th>
					@Html.DisplayNameFor(m => m.Make)
				</th>
				<th>
					@Html.DisplayNameFor(m => m.Name)
				</th>
				<th></th>
			</tr>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(m => item.Make.Name)
					</td>
					<td>
						@Html.DisplayFor(m => item.Name)
					</td>
					<partial name="_TableButtonsPartial" model="item.Id"></partial>
				</tr>
			}
		</table>
	</div>
</div>
